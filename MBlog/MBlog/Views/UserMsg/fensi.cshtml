            </div>
        </div>

    </div>
    @section scripts{
        <script>
            function Delfs(id) {
                if (confirm("确认移除此人？") == true) {
                    $.ajax(
                        {
                            url: "/UserMsg/Delfs",
                            type: "GET",
                            contentType: "application/x-www-form-urlencoded",
                            data: {
                                "uid": id
                            },

                            success: function (data) {
                                if (data == "true") {
                                    alert("已移除");
                                    location.href = '/UserMsg/fensi';
                                }
                                else {
                                    alert("移除失败");
                                }
                            },
                            error: function (error) {
                                alert("移除失败");
                            }
                        })
                }

            }




        </script>




    }

