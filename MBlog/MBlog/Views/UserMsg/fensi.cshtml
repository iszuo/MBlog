                            <input type="submit" value="查询" class="btn btn-primary" />
                        </span>
                        

                    </div>
                }
                    @foreach (var item in Model)
                    {
                        <a href="#">
                            <div class="row neirong-gz">
                                <div class="col-xs-2">
                                    <img src="@item.User.Image" class="neirong-gz-tx">
                                </div>
                                <div class="col-xs-8 neirong-gz-nick">
                                    <span class="neirong-gz-nick">@item.User.Nick</span>
                                </div>
                                <div class="col-xs-2 neirong-gz-btn">
                                    <button class="btn btn-default" onclick="Delfs(@item.User.Id)">移除粉丝</button>
                                </div>
                            </div>
                        </a>
                    }


                </div>

        </div>

        <div class="col-xs-3">

            <div class="help">
                <div class="help-o">
